<tr>
  <td class="label"><%= "&nbsp;" * 4 * level %><%= item.name %></td>
  <td><%= item.count %></td>
  <td><%= item.crafted_count %></td>
  <td><%= number_with_delimiter(item.unit_price) %></td>
  <td><%= number_with_delimiter(item.total_price) %></td>
</tr>
<% item.ingredients_craft_tree.each do |ingredient| %>
  <%= partial('craft_tree_item', :locals => { :item => ingredient, :level => level + 1 }) %>
<% end %>
